{
  "name": "dental-intel-stack",
  "version": "1.0.0",
  "description": "Full-stack dental practice management system",
  "private": true,
  "scripts": {
    "dev:setup": "npm run install:all && npm run setup:env",
    "dev:start": "concurrently \"npm run dev:backend\" \"npm run dev:frontend\"",
    "dev:frontend": "cd frontend && npm run dev",
    "dev:backend": "cd backend && npm run dev",
    "dev:docker": "docker-compose -f docker-compose.dev.yml up -d",
    "install:all": "npm run install:frontend && npm run install:backend",
    "install:frontend": "cd frontend && npm install --legacy-peer-deps",
    "install:backend": "cd backend && npm install",
    "build": "npm run build:frontend && npm run build:backend",
    "build:frontend": "cd frontend && npm run build",
    "build:backend": "cd backend && npm run build || echo 'Backend build not needed'",
    "setup:env": "node scripts/setup-environment.js",
    "deploy:dev": "docker-compose -f docker-compose.dev.yml up -d --build",
    "deploy:prod": "docker-compose -f docker-compose.prod.yml up -d --build",
    "deploy:server": "./scripts/deploy-production.sh",
    "test": "npm run test:frontend && npm run test:backend",
    "test:frontend": "cd frontend && npm test",
    "test:backend": "cd backend && npm test",
    "test:e2e": "cypress run",
    "lint": "npm run lint:frontend && npm run lint:backend",
    "lint:frontend": "cd frontend && npm run lint",
    "lint:backend": "cd backend && npm run lint || echo 'Backend lint not configured'",
    "clean": "npm run clean:frontend && npm run clean:backend && docker system prune -f",
    "clean:frontend": "cd frontend && rm -rf node_modules dist",
    "clean:backend": "cd backend && rm -rf node_modules",
    "logs": "docker-compose logs -f",
    "logs:frontend": "docker-compose logs -f dental-frontend",
    "logs:backend": "docker-compose logs -f dental-api",
    "stop": "docker-compose down",
    "restart": "docker-compose restart",
    "health": "curl -f http://localhost:5000/health && curl -f http://localhost:3000"
  },
  "devDependencies": {
    "concurrently": "^8.2.0",
    "cypress": "^12.17.0",
    "dotenv": "^16.3.1"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/tapiwago/dental-intel-stack.git"
  },
  "keywords": [
    "dental",
    "healthcare",
    "practice-management",
    "react",
    "nodejs",
    "mongodb",
    "typescript",
    "fullstack"
  ],
  "author": "Tapiwa",
  "license": "MIT"
}
